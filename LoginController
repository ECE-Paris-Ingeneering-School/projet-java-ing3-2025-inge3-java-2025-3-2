package controller;
import dao.UtilisateurDAO;
import model.Utilisateur;

public class LoginController {
    private UtilisateurDAO utilisateurDAO;

    public LoginController() {
        this.utilisateurDAO = new UtilisateurDAO();
    }

    public Utilisateur login(String email, String mdp) {
        if (email == null || mdp == null) {
            throw new IllegalArgumentException("Email ou mot de passe ne peut pas Ãªtre nul.");
        }

        Utilisateur utilisateur = utilisateurDAO.getByEmail(email);
        if (utilisateur != null && utilisateur.getMdp().equals(mdp)) {
            return utilisateur;
        }
        return null; // Mauvais identifiants
    }
}
